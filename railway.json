{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd polish-finance-platform/polish-finance-app && pnpm install && pnpm run build:prod"
  },
  "deploy": {
    "startCommand": "cd polish-finance-platform/polish-finance-app && pnpm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

